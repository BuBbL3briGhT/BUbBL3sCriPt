#!/usr/bin/env node

const readline = require('readline'),
      bubls = require('../src/bubblescript');

const rl = readline.createInterface({
  input: process.stdin,
  output: process.stdout
});

function r3pL() {
  rl.question("%< ", (xoxo) => {
    try {
      if (xoxo == ".exit") {
        rl.close();
        return;
      }
      console.log(bubls.eval(xoxo));
    } catch (error) {
      console.log(error);
    }
    r3pL();
  });
}

r3pL(); /* StaRt r3pL */
